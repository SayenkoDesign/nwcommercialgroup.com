{% extends 'base.html.twig' %}
{% block content %}
    <section class="title background">
        <div class="row column">
            <h1>{{ get_the_title() }}</h1>
        </div>
    </section>
    <section class="content">
        <div class="row small-up-1 medium-up-2 large-up-3">
            {% for track in get_field('tracks') %}
                <div class="column">
                    {% include 'partials/track-record.html.twig' with {
                        'image': track.image,
                        'title': track.title,
                        'confidential_location': track.confidential_location,
                        'city': track.city,
                        'state': track.state,
                        'price': '',
                        'cap_rate': ''
                    } %}
                </div>
            {% endfor %}
        </div>
    </section>
{% endblock %}

{% block call_to_action %}
    {% include 'partials/lets-talk.html.twig' with {
        cta_text_blue: "There are additional closings. Get more information.",
        cta_text_dark_blue: "",
        cta_button_link: "#",
        cta_button_text: "Let's Talk"
    }%}
{% endblock %}